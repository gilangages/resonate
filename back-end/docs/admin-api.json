{
    "openapi": "3.0.3",
    "info": {
        "title": "Admin API",
        "description": "Moderation tools for Admin.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "Token"
            }
        }
    },
    "paths": {
        "/api/admin/users": {
            "get": {
                "summary": "List All Users",
                "tags": [
                    "Admin User"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User List",
                        "content": {
                            "application/json": {
                                "example": {
                                    "data": [
                                        {
                                            "id": 1,
                                            "name": "User A",
                                            "email": "a@mail.com",
                                            "is_banned": false
                                        },
                                        {
                                            "id": 2,
                                            "name": "User B",
                                            "email": "b@mail.com",
                                            "is_banned": true
                                        }
                                    ],
                                    "meta": {
                                        "total": 2,
                                        "per_page": 10
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/admin/users/{id}": {
            "delete": {
                "summary": "Ban User",
                "description": "Soft delete user (Ban functionality).",
                "tags": [
                    "Admin User"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User Banned successfully"
                    }
                }
            }
        },
        "/api/admin/notes/{id}": {
            "delete": {
                "summary": "Delete Note (Moderation)",
                "tags": [
                    "Admin Note"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Note deleted by Admin"
                    }
                }
            }
        }
    }
}