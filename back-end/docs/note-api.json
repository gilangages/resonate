{
    "openapi": "3.0.3",
    "info": {
        "title": "Notes & Music API",
        "description": "API for Notes interactions using Music data.",
        "version": "1.2.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "Token"
            }
        },
        "schemas": {
            "Note": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 10
                    },
                    "content": {
                        "type": "string",
                        "example": "Lagu ini buat kamu yang jauh disana."
                    },
                    "recipient": {
                        "type": "string",
                        "example": "Si Dia"
                    },
                    "initial_name": {
                        "type": "string",
                        "nullable": true,
                        "example": "Secret Admirer"
                    },
                    "author": {
                        "type": "string",
                        "example": "Gilang (User)"
                    },
                    "author_avatar": {
                        "type": "string",
                        "example": "http://.../avatar.jpg"
                    },
                    "music_track_name": {
                        "type": "string",
                        "example": "Yellow"
                    },
                    "music_artist_name": {
                        "type": "string",
                        "example": "Coldplay"
                    },
                    "music_album_image": {
                        "type": "string",
                        "example": "https://i.scdn.co/..."
                    },
                    "music_preview_url": {
                        "type": "string",
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        }
    },
    "paths": {
        "/api/notes": {
            "get": {
                "summary": "Get User Notes (Protected)",
                "tags": [
                    "Notes"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Note"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create New Note",
                "tags": [
                    "Notes"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "content",
                                    "recipient",
                                    "music_track_id",
                                    "music_track_name",
                                    "music_artist_name",
                                    "music_album_image"
                                ],
                                "properties": {
                                    "content": {
                                        "type": "string",
                                        "maxLength": 1000,
                                        "example": "Semoga harimu menyenangkan!"
                                    },
                                    "recipient": {
                                        "type": "string",
                                        "maxLength": 50,
                                        "example": "Untuk Sahabat"
                                    },
                                    "initial_name": {
                                        "type": "string",
                                        "nullable": true,
                                        "maxLength": 50,
                                        "description": "Isi jika ingin pakai inisial, null jika nama asli",
                                        "example": "Mr. X"
                                    },
                                    "music_track_id": {
                                        "type": "string",
                                        "maxLength": 255,
                                        "example": "3n3Ppam7vgaVa1iaRUc9Lp"
                                    },
                                    "music_track_name": {
                                        "type": "string",
                                        "maxLength": 255,
                                        "example": "Mr. Brightside"
                                    },
                                    "music_artist_name": {
                                        "type": "string",
                                        "maxLength": 255,
                                        "example": "The Killers"
                                    },
                                    "music_album_image": {
                                        "type": "string",
                                        "format": "url",
                                        "example": "https://i.scdn.co/image/..."
                                    },
                                    "music_preview_url": {
                                        "type": "string",
                                        "format": "url",
                                        "nullable": true
                                    },
                                    "music_track_link": {
                                        "type": "string",
                                        "format": "url",
                                        "nullable": true
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Note Created"
                    },
                    "422": {
                        "description": "Validation Failed",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "The given data was invalid.",
                                    "errors": {
                                        "content": [
                                            "Pesan tidak boleh lebih dari 1000 karakter."
                                        ],
                                        "music_track_id": [
                                            "Kamu belum memilih lagu."
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/notes/{id}": {
            "put": {
                "summary": "Update Note",
                "tags": [
                    "Notes"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "content",
                                    "recipient",
                                    "music_track_id"
                                ],
                                "properties": {
                                    "content": {
                                        "type": "string"
                                    },
                                    "recipient": {
                                        "type": "string"
                                    },
                                    "initial_name": {
                                        "type": "string",
                                        "nullable": true
                                    },
                                    "music_track_id": {
                                        "type": "string"
                                    },
                                    "music_track_name": {
                                        "type": "string"
                                    },
                                    "music_artist_name": {
                                        "type": "string"
                                    },
                                    "music_album_image": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Updated successfully"
                    }
                }
            },
            "delete": {
                "summary": "Delete Note",
                "tags": [
                    "Notes"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Deleted successfully"
                    },
                    "403": {
                        "description": "Forbidden (Not Owner)"
                    }
                }
            }
        },
        "/api/notes/global": {
            "get": {
                "summary": "Get Global Notes (Public)",
                "tags": [
                    "Notes"
                ],
                "responses": {
                    "200": {
                        "description": "Public notes list",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Note"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/music/search": {
            "get": {
                "summary": "Search Music",
                "tags": [
                    "Music"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "minLength": 2
                        },
                        "example": "Coldplay"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Search Results",
                        "content": {
                            "application/json": {
                                "example": {
                                    "data": [
                                        {
                                            "id": "123",
                                            "title": "Yellow",
                                            "artist": {
                                                "name": "Coldplay"
                                            },
                                            "album": {
                                                "cover_medium": "https://..."
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}