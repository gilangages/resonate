{
    "openapi": "3.0.3",
    "info": {
        "title": "Notes API",
        "description": "Public notes API with authentication and ownership control",
        "version": "1.0.3"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Local server"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "Token"
            }
        },
        "schemas": {
            "Note": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 10
                    },
                    "content": {
                        "type": "string",
                        "example": "This is a public note"
                    },
                    "recipient": {
                        "type": "string",
                        "nullable": true,
                        "example": "Untuk Mantan Terindah"
                    },
                    "initial_name": {
                        "type": "string",
                        "nullable": true,
                        "description": "Nama samaran/inisial. Jika null, menggunakan nama asli user.",
                        "example": "Secret Admirer"
                    },
                    "author": {
                        "type": "string",
                        "description": "Nama yang ditampilkan (bisa nama asli atau samaran)",
                        "example": "Secret Admirer"
                    },
                    "author_avatar": {
                        "type": "string",
                        "example": "https://ui-avatars.com/api/?name=Secret+Admirer&background=random"
                    },
                    "spotify_track_id": {
                        "type": "string",
                        "nullable": true,
                        "example": "3n3Ppam7vgaVa1iaRUc9Lp"
                    },
                    "spotify_track_name": {
                        "type": "string",
                        "nullable": true,
                        "example": "Mr. Brightside"
                    },
                    "spotify_artist": {
                        "type": "string",
                        "nullable": true,
                        "example": "The Killers"
                    },
                    "spotify_album_image": {
                        "type": "string",
                        "nullable": true,
                        "example": "https://i.scdn.co/image/ab67616d0000b273d8f4e6b8f5b2f7e6c7d1a2b3"
                    },
                    "spotify_preview_url": {
                        "type": "string",
                        "nullable": true,
                        "example": "https://p.scdn.co/mp3-preview/abcd1234"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2026-01-03T10:20:30Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2026-01-03T10:25:30Z"
                    }
                }
            }
        }
    },
    "paths": {
        "/api/music/search": {
            "get": {
                "summary": "Search tracks (Mock/Spotify)",
                "tags": ["Music"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "description": "Song title or artist name",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "minLength": 2
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of tracks found",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "value": {
                                            "tracks": {
                                                "items": [
                                                    {
                                                        "id": "mock_001",
                                                        "name": "Mock Song One",
                                                        "artists": [
                                                            {
                                                                "name": "Mock Artist"
                                                            }
                                                        ],
                                                        "album": {
                                                            "images": [
                                                                {
                                                                    "url": "https://placehold.co/300"
                                                                }
                                                            ]
                                                        }
                                                    }
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/notes": {
            "get": {
                "summary": "Get public notes",
                "tags": ["Notes"],
                "responses": {
                    "200": {
                        "description": "List of public notes",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "summary": "Notes List",
                                        "value": {
                                            "data": [
                                                {
                                                    "id": 1,
                                                    "content": "Hello world",
                                                    "recipient": null,
                                                    "initial_name": "Mr. X",
                                                    "author": "Mr. X",
                                                    "author_avatar": "https://ui-avatars.com/api/?name=Mr+X&background=random",
                                                    "spotify_track_name": "Yellow",
                                                    "spotify_artist": "Coldplay",
                                                    "created_at": "2026-01-03T08:00:00Z"
                                                },
                                                {
                                                    "id": 2,
                                                    "content": "Keep going ðŸ’ª",
                                                    "recipient": "My Future Self",
                                                    "initial_name": null,
                                                    "author": "Abdi (Nama Asli)",
                                                    "author_avatar": "https://ui-avatars.com/api/?name=Abdi&background=random",
                                                    "spotify_track_id": null,
                                                    "created_at": "2026-01-03T09:00:00Z"
                                                }
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create new note",
                "tags": ["Notes"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "content",
                                    "recipient",
                                    "spotify_track_id",
                                    "spotify_track_name",
                                    "spotify_artist",
                                    "spotify_album_image"
                                ],
                                "properties": {
                                    "content": {
                                        "type": "string",
                                        "example": "This song describes my mood today"
                                    },
                                    "recipient": {
                                        "type": "string",
                                        "nullable": true,
                                        "example": "Untuk Mantan Terindah"
                                    },
                                    "initial_name": {
                                        "type": "string",
                                        "nullable": true,
                                        "description": "Kirim string untuk nama samaran, kirim null untuk nama asli.",
                                        "example": "Si Galau"
                                    },
                                    "spotify_track_id": {
                                        "type": "string",
                                        "nullable": true,
                                        "example": "3n3Ppam7vgaVa1iaRUc9Lp"
                                    },
                                    "spotify_track_name": {
                                        "type": "string",
                                        "nullable": true
                                    },
                                    "spotify_artist": {
                                        "type": "string",
                                        "nullable": true
                                    },
                                    "spotify_album_image": {
                                        "type": "string",
                                        "nullable": true
                                    },
                                    "spotify_preview_url": {
                                        "type": "string",
                                        "nullable": true
                                    }
                                }
                            }
                        },
                        "examples": {
                            "create": {
                                "summary": "Create Example",
                                "value": {
                                    "content": "This song describes my mood today",
                                    "recipient": "Untuk Mantan Terindah",
                                    "initial_name": "Si Galau",
                                    "spotify_track_id": "3n3Ppam7vgaVa1iaRUc9Lp"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Note created successfully",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "summary": "Create success",
                                        "value": {
                                            "data": {
                                                "id": 10,
                                                "content": "This song describes my mood today",
                                                "recipient": "Untuk Mantan Terindah",
                                                "initial_name": "Si Galau",
                                                "author": "Si Galau",
                                                "author_avatar": "https://ui-avatars.com/api/?name=Si+Galau&background=random",
                                                "spotify_track_id": "3n3Ppam7vgaVa1iaRUc9Lp",
                                                "created_at": "2026-01-03T10:20:30Z"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                }
            }
        },
        "/api/notes/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "description": "ID of the note",
                    "required": true,
                    "schema": {
                        "type": "integer"
                    }
                }
            ],
            "get": {
                "summary": "Get note detail",
                "tags": ["Notes"],
                "responses": {
                    "200": {
                        "description": "Note detail",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "detail": {
                                        "summary": "Note detail",
                                        "value": {
                                            "data": {
                                                "id": 10,
                                                "content": "Detail konten",
                                                "recipient": null,
                                                "initial_name": null,
                                                "author": "Abdi",
                                                "author_avatar": "https://ui-avatars.com/api/?name=Abdi&background=random",
                                                "spotify_track_id": "123",
                                                "created_at": "2026-01-03T10:20:30Z",
                                                "updated_at": "2026-01-03T10:20:30Z"
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "404": {
                            "description": "Note not found"
                        }
                    }
                }
            },
            "put": {
                "summary": "Update note",
                "tags": ["Notes"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "Accept",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "default": "application/json"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "content": {
                                        "type": "string",
                                        "example": "Updated content"
                                    },
                                    "recipient": {
                                        "type": "string",
                                        "nullable": true,
                                        "example": "Updated Recipient"
                                    },
                                    "initial_name": {
                                        "type": "string",
                                        "nullable": true,
                                        "example": "Updated Alias"
                                    },
                                    "spotify_track_id": {
                                        "type": "string",
                                        "nullable": true
                                    }
                                }
                            },
                            "examples": {
                                "update": {
                                    "summary": "Update Example",
                                    "value": {
                                        "content": "Updated content",
                                        "recipient": "Updated Recipient",
                                        "initial_name": "Updated Alias",
                                        "spotify_track_id": "123"
                                    }
                                }
                            }
                        }
                    },
                    "responses": {
                        "200": {
                            "description": "Note updated successfully",
                            "content": {
                                "application/json": {
                                    "examples": {
                                        "success": {
                                            "summary": "Update success",
                                            "value": {
                                                "data": {
                                                    "id": 10,
                                                    "content": "Updated Content",
                                                    "recipient": "Updated Recipient",
                                                    "initial_name": "Updated Alias",
                                                    "author": "Updated Alias",
                                                    "author_avatar": "https://ui-avatars.com/api/?name=Updated+Alias&background=random",
                                                    "spotify_track_id": "123",
                                                    "created_at": "2026-01-03T10:20:30Z",
                                                    "updated_at": "2026-01-12T12:00:00Z"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "403": {
                            "description": "Forbidden (Not Owner)"
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete note",
                "tags": ["Notes"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Note deleted successfully",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "value": {
                                            "message": "Note deleted successfully"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Forbidden (Not Owner)"
                    }
                }
            }
        }
    }
}
