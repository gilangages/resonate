{
    "openapi": "3.0.3",
    "info": {
        "title": "User API",
        "description": "User authentication API for Notes Application",
        "version": "1.0.1"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Local server"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "Token"
            }
        },
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Abdi"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "abdi@mail.com"
                    },
                    "email_verified_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        }
    },
    "paths": {
        "/api/users": {
            "post": {
                "summary": "Register new user",
                "tags": ["User"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Abdi"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "abdi@mail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "secret123"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "secret123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User registered successfully",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "summary": "Register success",
                                        "value": {
                                            "message": "User registered successfully",
                                            "user": {
                                                "id": 1,
                                                "name": "Abdi",
                                                "email": "abdi@mail.com",
                                                "updated_at": "2026-01-12T10:00:00Z",
                                                "created_at": "2026-01-12T10:00:00Z"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/api/users/login": {
            "post": {
                "summary": "Login user",
                "tags": ["User"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["email", "password"],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "abdi@mail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "secret123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "summary": "Login success",
                                        "value": {
                                            "token": "1|abcdef1234567890",
                                            "token_type": "Bearer",
                                            "user": {
                                                "id": 1,
                                                "name": "Abdi",
                                                "email": "abdi@mail.com",
                                                "email_verified_at": null,
                                                "created_at": "2026-01-12T10:00:00Z",
                                                "updated_at": "2026-01-12T10:00:00Z"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                }
            }
        },
        "/api/users/current": {
            "get": {
                "summary": "Get current logged user",
                "tags": ["User"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User details",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "summary": "User Profile Data",
                                        "value": {
                                            "data": {
                                                "id": 1,
                                                "name": "Abdi",
                                                "email": "abdi@mail.com",
                                                "created_at": "2026-01-12T10:00:00Z",
                                                "updated_at": "2026-01-12T10:00:00Z"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                }
            },
            "patch": {
                "summary": "Update current user profile",
                "tags": ["User"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Abdi Baru"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "description": "Isi hanya jika ingin ganti password"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User updated successfully",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "summary": "Update Success",
                                        "value": {
                                            "message": "Profile updated successfully",
                                            "data": {
                                                "id": 1,
                                                "name": "Abdi Baru",
                                                "email": "abdi@mail.com",
                                                "created_at": "2026-01-12T10:00:00Z",
                                                "updated_at": "2026-01-12T10:05:00Z"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                }
            }
        },
        "/api/users/logout": {
            "delete": {
                "summary": "Logout user",
                "tags": ["User"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Logged out successfully"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                }
            }
        }
    }
}
