{
    "openapi": "3.0.3",
    "info": {
        "title": "User API",
        "description": "User authentication, profile management, and settings.",
        "version": "1.1.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Local Development Server"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "Token"
            }
        },
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Gilang Ages"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "gilang@example.com"
                    },
                    "avatar": {
                        "type": "string",
                        "nullable": true,
                        "example": "http://localhost:8000/storage/avatars/user-1.jpg"
                    },
                    "card_theme": {
                        "type": "string",
                        "example": "blue-ocean",
                        "description": "Tema kartu pilihan user"
                    },
                    "role": {
                        "type": "string",
                        "enum": [
                            "user",
                            "admin"
                        ],
                        "example": "user"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "ValidationError": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "The given data was invalid."
                    },
                    "errors": {
                        "type": "object",
                        "example": {
                            "email": [
                                "The email has already been taken."
                            ],
                            "password": [
                                "The password confirmation does not match."
                            ]
                        }
                    }
                }
            }
        }
    },
    "paths": {
        "/api/users": {
            "post": {
                "summary": "Register New User",
                "tags": [
                    "Auth"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "maxLength": 255,
                                        "example": "Gilang Ages"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "gilang@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "minLength": 8,
                                        "example": "password123"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User registered successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "user": {
                                            "$ref": "#/components/schemas/User"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/login": {
            "post": {
                "summary": "Login User",
                "tags": [
                    "Auth"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "gilang@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login Successful",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Login successful",
                                    "token": "2|laravel_sanctum_token...",
                                    "user": {
                                        "id": 1,
                                        "name": "Gilang",
                                        "email": "gilang@example.com"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid Credentials"
                    }
                }
            }
        },
        "/api/users/current": {
            "get": {
                "summary": "Get Current User Profile",
                "tags": [
                    "User Profile"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User Data",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Update Profile (Name, Password, Avatar, Theme)",
                "description": "Gunakan Method POST dengan `_method: PATCH` jika terkendala multipart di beberapa client, atau langsung PATCH jika didukung. Endpoint ini mendukung upload file gambar.",
                "tags": [
                    "User Profile"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "_method": {
                                        "type": "string",
                                        "example": "PATCH",
                                        "description": "Required for Laravel to process multipart PATCH"
                                    },
                                    "name": {
                                        "type": "string",
                                        "maxLength": 255
                                    },
                                    "avatar": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "Max 2MB (jpg, png, jpeg)"
                                    },
                                    "card_theme": {
                                        "type": "string",
                                        "maxLength": 20
                                    },
                                    "password": {
                                        "type": "string",
                                        "minLength": 8,
                                        "description": "Isi hanya jika ingin ganti password"
                                    },
                                    "password_confirmation": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Profile Updated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/logout": {
            "delete": {
                "summary": "Logout",
                "tags": [
                    "Auth"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Logged out successfully"
                    }
                }
            }
        }
    }
}